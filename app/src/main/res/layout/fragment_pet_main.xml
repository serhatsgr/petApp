<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/background_main"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <!-- Main content area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENEL"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:textColor="#6A0DAD" />

        <!-- Buttons layout -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:padding="8dp">

            <!-- Pet Name Button -->
            <Button
                android:id="@+id/txtPetName"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_background_circle"
                android:text="İsim: boş"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- Pet Type Button -->
            <Button
                android:id="@+id/txtPetType"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_background_circle"
                android:text="Tür: boş"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- Pet Gender Button -->
            <Button
                android:id="@+id/txtPetGender"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_background_circle"
                android:text="Cinsiyet:"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <!-- Pet Weight Button -->
            <Button
                android:id="@+id/txtPetWeight"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_background_circle"
                android:text="Ağırlık: boş"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </GridLayout>

        <Button
            android:id="@+id/buttonUpdatePet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/button_background"
            android:text="Hayvanı Güncelle"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtInterestingFacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="65dp"
            android:text="İLGİNÇ BİLGİLER KÖŞESİ"
            android:textColor="#6A0DAD"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtInterestingFactsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:background="#F0F0F0"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:lineSpacingExtra="4dp"
        />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
